<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNConfiguraciones"
        android:layout_width="255dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#578A63"
        android:drawableEnd="@drawable/baseline_navigate_naass"
        android:text="Configuraciones"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNDirecciones" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="290dp"
        android:layout_height="262dp"
        android:src="@drawable/hats_logo_1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/textVieww8"
        android:layout_width="294dp"
        android:layout_height="75dp"
        android:text="HATS"
        android:textAlignment="center"
        android:textColor="#3D6F4C"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394" />

    <TextView
        android:id="@+id/textViewws8"
        android:layout_width="294dp"
        android:layout_height="75dp"
        android:text="¿ Que deseás hacer ?"
        android:textAlignment="center"
        android:textColor="#63B47A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <Button
        android:id="@+id/btnNPerfil"
        android:layout_width="255dp"
        android:layout_height="71dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#578A63"
        android:drawableLeft="@drawable/baseline_navigate_naass"
        android:drawableEnd="@drawable/baseline_navigate_naass"
        android:text="Perfil de Usuario"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNDirecciones"
        android:layout_width="255dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#578A63"
        android:drawableEnd="@drawable/baseline_navigate_naass"
        android:text="Direcciones"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNPerfil" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="294dp"
        android:layout_height="75dp"
        android:text="Bienvenido a"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>